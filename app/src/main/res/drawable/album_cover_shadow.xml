<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 专辑封面阴影效果 - iPod Classic 风格 -->
    
    <!-- 底部阴影 -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#40000000" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    
    <!-- 白色边框（模拟 CD 盒效果） -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="2dp" />
            <stroke
                android:width="1dp"
                android:color="#E0E0E0" />
        </shape>
    </item>
    
    <!-- 内阴影效果 -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#10000000"
                android:startColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="1dp" />
        </shape>
    </item>
</layer-list>
