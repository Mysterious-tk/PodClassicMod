<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- iPod Classic 风格的选中背景 - 渐变效果 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#4A90D9"
                android:centerColor="#007AFF"
                android:endColor="#0055B3"
                android:type="linear" />
        </shape>
    </item>
    <!-- 顶部高光 -->
    <item android:top="0dp" android:height="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#6BA3E0" />
        </shape>
    </item>
    <!-- 底部阴影 -->
    <item android:bottom="0dp" android:height="1dp" android:gravity="bottom">
        <shape android:shape="rectangle">
            <solid android:color="#004499" />
        </shape>
    </item>
</layer-list>
