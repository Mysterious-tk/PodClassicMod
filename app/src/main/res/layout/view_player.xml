<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_1"
    android:background="@color/background">

    <!-- 顶部信息栏 - 歌曲序号和播放模式 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/padding_0"
        android:layout_weight="1"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <com.example.podclassic.widget.TextView
            android:id="@+id/tv_index"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <com.example.podclassic.widget.TextView
            android:id="@+id/tv_stop_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_access_time_grey_600_18dp"
            android:gravity="center"
            android:textColor="@color/text_secondary"
            android:textSize="13sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_repeat_mode"
            android:layout_width="@dimen/icon_size"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/icon_size"
            android:layout_marginEnd="@dimen/icon_size" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_play_mode"
            android:layout_width="@dimen/icon_size"
            android:layout_height="match_parent"
            android:layout_gravity="end" />

    </FrameLayout>

    <!-- 专辑封面和歌曲信息区域 - iPod Classic 风格 -->
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/padding_0"
        android:layout_weight="5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- 专辑封面 - 3D斜放效果，保持简洁无背景 -->
        <com.example.podclassic.widget.ImageView
            android:id="@+id/image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitXY" />

        <!-- 歌曲信息区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <!-- 歌曲标题 -->
            <com.example.podclassic.widget.TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- 艺术家 -->
            <com.example.podclassic.widget.TextView
                android:id="@+id/tv_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/main"
                android:textSize="15sp" />

            <!-- 专辑名 -->
            <com.example.podclassic.widget.TextView
                android:id="@+id/tv_album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text_secondary"
                android:textSize="13sp" />

            <!-- 歌词 -->
            <com.example.podclassic.widget.TextView
                android:id="@+id/tv_lyric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <!-- 进度条区域 -->
    <com.example.podclassic.widget.ScreenLayout
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/padding_0"
        android:layout_weight="2"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

</LinearLayout>
